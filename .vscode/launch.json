  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Node on current file",
      "program": "${fileBasenameNoExtension}",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Debug Babel plugin",
      "request": "launch",
      "runtimeArgs": ["compile"],
      "runtimeExecutable": "yarn",
      "type": "pwa-node"
    },
    {
      "name": "Debug Unit Test in Current File",
      "request": "launch",
      "runtimeArgs": ["test", "-i", "${fileBasenameNoExtension}"],
      "runtimeExecutable": "yarn",
      // "skipFiles": [
      //     "<node_internals>/**"
      // ],
      "type": "pwa-node"
    }
  ]
}
